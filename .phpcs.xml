<?xml version="1.0"?>
<ruleset name="Abettor">
	<description>PSR12 with Wordpress</description>

	<!-- Exclude the Composer Vendor directory. -->
	<exclude-pattern>/vendor/*</exclude-pattern>

	<arg name="tab-width" value="4"/>

	<rule ref="PSR12">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
	</rule>

	<file>wp-abettor.php</file>
	<file>src</file>

	<rule ref="Generic.Files.LineLength.TooLong"/>

	<!-- Opinionated rules -->

	<!-- Short array [] is preferred -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
	<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>

	<!-- Use tabs -->
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
	<rule ref="Generic.WhiteSpace.ScopeIndent">
			<properties>
					<property name="indent" value="4"/>
					<property name="tabIndent" value="true"/>
			</properties>
	</rule>

	<!-- WordPress -->
	<config name="minimum_supported_wp_version" value="6.0"/>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="abettor"/>
			</property>
		</properties>
	</rule>
	<rule ref="WordPress.CodeAnalysis.EscapedNotTranslated"/>
	<rule ref="WordPress.DB"/>
	<rule ref="WordPress.DateTime"/>
	<rule ref="WordPress.Security"/>
	<rule ref="WordPress.Utils.I18nTextDomainFixer"/>
	<rule ref="WordPress.PHP">
			<exclude name="WordPress.PHP.YodaConditions"/>
	</rule>
	<rule ref="WordPress.WP" />
</ruleset>
